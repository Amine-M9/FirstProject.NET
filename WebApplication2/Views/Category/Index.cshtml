@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="Notification"/>

<h1>Categories</h1>
<div class="container p-3">
    <div class="row pt-4"> 
        <div class="col-6"> 
        <h2 class="text-primary">
            Category List
        </h2>
    </div>
    <div class="col-6 text-end"> 
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
             Create Category <i class="bi bi-plus-circle"></i>
        </a>
    </div>
        
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                    <td width="30%">
                    @obj.DisplayOrder
                    </td>
                        <td width="30%">
                    <div class="w-75 text-end" role="group">
                        <form method="post">
                                     <a asp-controller="Category" class="btn btn-warning" asp-action="Edit" asp-route-id="@obj.Id">
                 Edit <i class="bi bi-pencil-square"></i>
                            </a>&ensp;&ensp;
                              <button type="submit" class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                          Delete <i class="bi bi-x-octagon"></i></button>
    </form>
                                      
                    </div>
                        </td>

            </tr>
        }

    </tbody>

</table>